<div class="jumbotron">

	<h2>Edit My Story</h2>

	<%= form_for @story do |f| %>
		Title: <%= f.text_field :title, :class =>"form-control" %> <br/> <br/>
		Story: <%= f.text_area :content, :class =>"form-control" %> <br/> <br/>

	<div id="numCharsLeft">240</div>
	<script>
		function countChars(){
			var numLeft = 240 - document.getElementById("story_content").value.length;
			document.getElementById("numCharsLeft").innerHTML = numLeft;
			if(numLeft <= 0)
				return false;
		};
		document.getElementById("story_content").onkeypress = countChars;
		countChars();
	</script>

		<%= f.submit "Edit Entry", :class =>"btn btn-link" %> <br/> <br/>

	<% end %>

</div>

<%= link_to "Back to My Journal", stories_path, :class =>"btn btn-link" %>