<div class="jumbotron">

	<h2>Edit My Story</h2>

	<%= form_for @story do |f| %>
		Title: <%= f.text_field :title, :class =>"form-control" %> <br/> <br/>
		Story: <%= f.text_area :content, :class =>"form-control" %> <br/> <br/>

		<%= f.submit "Edit Entry", :class =>"btn" %> <br/> <br/>

	<% end %>

</div>

<%= link_to "Back to My Journal", stories_path, :class =>"btn btn-link" %>