<div class="jumbotron">

<h1> <%= @story.title %> </h1>

<p> <%= @story.content %> </p>

</div>

<%= link_to "Edit this entry", edit_story_path(@story), :class =>"btn btn-link" %>

<%= link_to "Delete this entry", @story, method: :delete, data: {confirm: 'Are you sure you want to delete this journal entry?'}, :class =>"btn btn-link" %>

<%= link_to "Back to My Journal", stories_path, :class =>"btn btn-link" %>